post_install() {
	if [ -z "`grep '^http::' /etc/group`" ]; then
		groupadd -g 33 http >& /dev/null
	fi
	if [ -z "`grep '^http:' /etc/passwd`" ]; then
		useradd -u 33 -d /srv/http -g http -s /bin/false http &>/dev/null
	fi
}

post_upgrade() {
	post_install
}

pre_remove() {
	userdel http &> /dev/null
	groupdel http &> /dev/null
}